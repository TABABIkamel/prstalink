<?xml version="1.0" encoding="UTF-8"?>
<definitions
	xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI"
	xmlns:omgdc="http://www.omg.org/spec/DD/20100524/DC"
	xmlns:omgdi="http://www.omg.org/spec/DD/20100524/DI"
	xmlns:flowable="http://flowable.org/bpmn"
	typeLanguage="http://www.w3.org/2001/XMLSchema"
	expressionLanguage="http://www.w3.org/1999/XPath"
	targetNamespace="http://www.flowable.org/processdef">
	<process id="candidatureReview"
		name="A simple process for candidature review." isExecutable="true">
		<startEvent id="start" />
		<sequenceFlow sourceRef="start" targetRef="reviewCandidature" />
		<userTask id="reviewCandidature"
			name="Review the submitted candidature"
			flowable:assignee="${esn}" />
		<sequenceFlow sourceRef="reviewCandidature"
			targetRef="decision" />
		<exclusiveGateway id="decision" />
		<sequenceFlow sourceRef="decision"
			targetRef="candidatureApproved">
			<conditionExpression xsi:type="tFormalExpression">
		        <![CDATA[
		          ${approved}
		        ]]>
			</conditionExpression>
		</sequenceFlow>
		<sequenceFlow sourceRef="decision"
			targetRef="candidatureRejected">
			<conditionExpression xsi:type="tFormalExpression">
		        <![CDATA[
		          ${!approved}
		        ]]>
			</conditionExpression>
		</sequenceFlow>
		<serviceTask id="candidatureApproved"
			name="Contact the owner of approved candidature."
		    flowable:delegateExpression="${sendAcceptedMailService}" />
		<sequenceFlow sourceRef="candidatureApproved"
			targetRef="end" />
		<serviceTask id="candidatureRejected"
			name="Send out rejection email to owner of rejected candidature"
					 flowable:delegateExpression="${sendRejectedMailService}" />
		<sequenceFlow sourceRef="candidatureRejected"
			targetRef="end" />
		<endEvent id="end" />
	</process>
</definitions>